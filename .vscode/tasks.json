{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar MLflow Server",
            "type": "shell",
            "command": "mlflow",
            "args": ["server", "--host", "127.0.0.1", "--port", "5000"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Iniciar Streamlit App",
            "type": "shell",
            "command": "streamlit",
            "args": ["run", "src/infrastructure/web/streamlit_app.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Entrenar Modelo",
            "type": "shell",
            "command": "python",
            "args": ["src/main.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Instalar Dependencias",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Proyecto",
            "type": "shell",
            "command": "python",
            "args": ["setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}